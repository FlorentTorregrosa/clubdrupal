#!/bin/sh
PATH=/usr/local/bin:/usr/bin:/bin:/users/guest/assos/bin

#!/bin/sh
sites_dir=~/htmltest/sites
backup_dir=~/Desktop/dump_d7

date=`date "+%Y-%m-%d-%Hh%Mm%Ss"`

cd $sites_dir

for dir in $(ls)
do
    if [ -d $dir -a ! $dir="test" ]
    then
	cd $dir
	drush sql-dump > "$backup_dir/$dir.dump$date.sql"
	cd -
    fi
done
