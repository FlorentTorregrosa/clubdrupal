#!/bin/sh
PATH=/usr/local/bin:/usr/bin:/bin

init_scripts.sh

if [ $# -lt 1 ]; then
  echo "usage: $0 <drush args>"
  exit 1
fi

cd $d7_sites_dir

for x in $(ls -1 | grep -v 'all' | grep -v file-*); do
  if [ -d $x -a ! -L $x ]; then
    cd $x;
    echo $x
    #drush pm-info;
    #drush dis ldapauth ldapdata ldapgroups;
    drush $*
    cd -;
  fi
done
