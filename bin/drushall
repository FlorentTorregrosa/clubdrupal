#!/bin/sh
PATH=/usr/local/bin:/usr/bin:/bin

if [ $# -lt 1 ]; then
  echo "usage: $0 <drush args>"
  exit 1
fi

cd /users/guest/assos/html/sites

for x in $(ls -1 | grep -v 'all' | grep -v file-*); do
  if [ -d $x -a ! -L $x ]; then
    cd $x;
    echo $x
    #drush pm-info;
    #drush dis ldapauth ldapdata ldapgroups;
    drush $*
    cd -;
  fi
done
